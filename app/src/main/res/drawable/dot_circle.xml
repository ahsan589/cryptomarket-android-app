<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set circle color -->
    <solid android:color="@color/white" /> <!-- Example: #FF5722 -->

    <!-- Optional border -->
    <stroke
        android:width="0dp"
        android:color="@color/neutral" />

    <!-- Ensure perfect circle -->
    <size
        android:width="10dp"
        android:height="10dp" />
</shape>